{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
        
      ],
      "baseUrl": "./",
          "paths": {
            "~/*": [ "./src/*" ],
        },
      "types": ["vite/client"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "downlevelIteration": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "setupTests.ts",
      "src",
      "src/__mocks__",
      "jest", "src/components/export/properties/.tsx"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!node_modules/**"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  